<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>smartoa</display-name>
  
  <servlet>
		<servlet-name>StartupServlet</servlet-name>
		<servlet-class>com.chz.smartoa.common.servlet.StartupServlet</servlet-class>
		<init-param>
			<param-name>systemName</param-name>
			<param-value>smartoa</param-value>
		</init-param>
		<init-param>
			<param-name>logConfig</param-name>
			<param-value>/conf/log4j.xml</param-value>
		</init-param>
		<init-param>
			<param-name>logRefresh</param-name>
			<param-value>60</param-value>
		</init-param>
		<init-param>
			<param-name>emailConfig</param-name>
			<param-value>/conf/config-email.xml</param-value>
		</init-param>
		<init-param>
			<param-name>noticeTemplate</param-name>
			<param-value>/conf/notice-template.properties</param-value>
		</init-param>
		<init-param>
			<param-name>sysConfigProperties</param-name>
			<param-value>/conf/systemConfig.properties</param-value>
		</init-param>
		<init-param>
			<param-name>vmPath</param-name>
			<param-value>/conf/vm</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>VersionServlet</servlet-name>
		<servlet-class>com.chz.smartoa.common.version.VersionServlet</servlet-class>
		<init-param>
			<param-name>versionFile</param-name>
			<param-value>/version.txt</param-value>
		</init-param>
		<init-param>
			<param-name>patchPath</param-name>
			<param-value>/patch</param-value>
		</init-param>
		<init-param>
			<param-name>isInternal</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>patchFilter</param-name>
			<param-value>txt</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
  
    <!--spring-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext*.xml</param-value>
    </context-param>
	
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
	
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
			<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
	        <filter-name>authorize</filter-name>
	        <filter-class>com.chz.smartoa.common.filter.AuthorizeFilter</filter-class>
	</filter>

	<filter-mapping>
	        <filter-name>authorize</filter-name>
	        <url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
	        <filter-name>authorize</filter-name>
	        <url-pattern>*.htm</url-pattern>
	</filter-mapping>  
	<filter-mapping>
	        <filter-name>authorize</filter-name>
	        <url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
	        <filter-name>authorize</filter-name>
	        <url-pattern>*.jsp</url-pattern>
	</filter-mapping>

	<filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
        <init-param>
			<param-name>config</param-name>
			<param-value>
				struts-default.xml,struts-plugin.xml,../struts.xml
			</param-value>
		</init-param>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>	
	
  <welcome-file-list>
    <welcome-file>/login.html</welcome-file>
  </welcome-file-list>
 
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.html</location>
	</error-page> 
	 <!-- 配置异常处理 -->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.html</location>
	</error-page>
	
</web-app>